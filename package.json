{
  "name": "discord-league",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn build:clean && yarn build:server && yarn build:client",
    "build:clean": "rm -rf dist",
    "build:client": "cd client && yarn install && yarn build && cd .. && cp -r client/build dist/public",
    "build:server": "tsc",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "migrate:latest": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "start:all:dev": "concurrently \"yarn start:server:dev\" \"cd client && yarn start\"",
    "start:server:dev": "cross-env NODE_ENV=development sh bin/watch.sh",
    "start": "NODE_ENV=production yarn migrate:latest && node dist/index.js",
    "test": "yarn lint && yarn test:unit && yarn build",
    "test:unit": "yarn build:clean && jest --coverage",
    "test:unit:watch": "yarn build:clean && jest --watch"
  },
  "engines": {
    "node": "^12.14.1"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/chance": "^1.0.9",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.11",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.3",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/node": "^12.12.6",
    "@types/passport": "^1.0.2",
    "@types/passport-oauth2": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "already": "^1.10.1",
    "body-parser": "^1.19.0",
    "chance": "^1.1.4",
    "concurrently": "^5.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-jsx": "^8.1.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "express": "^4.17.1",
    "express-async-router": "^0.1.15",
    "fast-check": "^1.23.0",
    "fp-ts": "^2.5.1",
    "helmet": "^3.21.2",
    "jest": "^25.1.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.8",
    "mappersmith": "^2.31.2",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "pg": "^7.17.1",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
